{
	"name": "textusm",
	"displayName": "TextUSM",
	"description": "Generate a User Story Mapping from indented text.",
	"author": {
		"name": "harehare"
	},
	"publisher": "harehare",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.33.0"
	},
	"galleryBanner": {
		"color": "#282C32",
		"theme": "dark"
	},
	"icon": "images/icon.png",
	"categories": [
		"Other"
	],
	"keywords": ["svg", "user-story-mapping", "user-story-map"],
	"activationEvents": [
		"onCommand:extension.showPreview",
		"onCommand:extension.exportSvg"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
			"command": "extension.showPreview",
			"title": "TextUSM: Open Preview"
		}, {
			"command": "extension.exportSvg",
			"title": "TextUSM: Export SVG"
		}],
		"configuration": {
			"type": "object",
			"title": "TextUSM",
			"properties": {
				"textusm.fontName": {
					"type": "string",
					"default": null,
					"markdownDescription": "Font family for figure."
				},
				"textusm.exportDir": {
					"type": "string",
					"default": null,
					"markdownDescription": "Set the output directory for svg files."
				},
				"textusm.backgroundColor": {
					"type": "string",
					"default": "transparent",
					"markdownDescription": "background color for figure."
				},
				"textusm.activity.color": {
					"type": "string",
					"default": "#FFFFFF",
					"markdownDescription": "Color for user activity."
				},
				"textusm.activity.backgroundColor": {
					"type": "string",
					"default": "#266B9A",
					"markdownDescription": "Background color for user activity."
				},
				"textusm.task.color": {
					"type": "string",
					"default": "#FFFFFF",
					"markdownDescription": "Color for user task."
				},
				"textusm.task.backgroundColor": {
					"type": "string",
					"default": "#3E9BCD",
					"markdownDescription": "Background color for user task."
				},
				"textusm.story.color": {
					"type": "string",
					"default": "#000000",
					"markdownDescription": "Color for user story."
				},
				"textusm.story.backgroundColor": {
					"type": "string",
					"default": "#FFFFFF",
					"markdownDescription": "Background color for user story."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/harehare/textusm.git"
	}
}